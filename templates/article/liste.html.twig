{% extends "base.html.twig" %}

{% block title %}Liste des articles{% endblock %}

{% block body %}

    <div class="container pt-5">
        <div class="row justify-content-center">

            <div class="col-12">
                <h1 class="text-center">Mes Articles</h1>

            </div>
            {% include "shared/_messages_flash.html.twig" %}

            {% for article in articles %}
            <div class="card col-md-6 col-sm-12 col-lg-4 col-xl-4 p-3 m-3">

                <div class="card-header">
                    <h4> {{article.titre}}</h4>
                </div>
                <div class="card-body">
                    {{article.contenu}}
                </div>
                <div class="card-footer">
                    Paru le {{article.createdAt | date('d-m-Y')}}
                </div>

                <a href=" {{ path('show_one_article', {'id': article.id} )}} " class="btn btn-success">Voir l'article</a>
            
            </div>
                
            {% endfor %}

    
        </div>
    
    </div>

{% endblock %}